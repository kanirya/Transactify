@model IEnumerable<Hostel_Management.Models.Model.Wallet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConnectedUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConnectedUser.Name)
            </td>
            <td>
                <a class="btn btn-edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-edit" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="fixed-bottom-buttons">
    <div class="container">
        <div class="row row-buttons">

            <div class="col-6">
                <div class="create-tran-btn">Add Cash</div>
            </div>
            <div class="col-6">
                <div class="create-tran-btn">Send Money</div>
            </div>
        </div>
    </div>
</div>