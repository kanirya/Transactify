@model IEnumerable<Hostel_Management.Models.Model.Transaction>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 d-flex justify-content-center p-2">
                <div class="position-relative" style="width: 100%; max-width: 350px;">
                    <!-- Dropdown Positioned Absolutely in the Card -->
                    <div class="justify-content-between d-flex px-3">


                    <h5 class="" style="font-size:15px;font-weight:bold; color:#222222;opacity:.8;">
                        @item.Timestamp.ToString("dd MMMMM yyyy")
                    </h5>
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm" type="button" id="dropdownMenu-@item.Id" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-ellipsis-vertical" style="color:black;"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenu-@item.Id">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Details</a></li>
                            <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                        </ul>
                    </div>
                    </div>
                    <div class="transaction-container p-3">
                        <div class="d-flex justify-content-between">
                            <h5 style="font-size:14px;"><strong>@item.Currency.Code</strong> @item.Amount</h5>
                            <h5 style="font-size:15px;font-weight:bold; color:#222222;opacity:.8;">@item.Timestamp.ToString("h:mm tt")</h5>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 style="font-size:14px;font-weight:300;">@item.FromAccount.AccountName</h5>
                                <h5 style="font-size:14px;font-weight:300;">@item.FromAccount.AccountNumber</h5>
                            </div>
                            <i class="fa-solid fa-arrow-right moving-arrow fa-2x"></i>
                            <div>
                                <h5 style="font-size:14px;font-weight:300;">@item.ToAccount.AccountName</h5>
                                <h5 style="font-size:14px;font-weight:300;">@item.ToAccount.AccountNumber</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



<p>
    <a asp-action="Create" asp-route-id="@ViewBag.id">Create New</a>
</p>
<div class="row" style="  position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 10px;">
	<div class="col-6 col-sm-4 col-md-3">
        <a style="text-decoration:none;" asp-action="Create" asp-route-id="@ViewBag.id">
            <div class="create-tran-btn">Add Cash</div>
        </a>
	</div>
	<div class="col-6 col-sm-4 col-md-3">

        <a style="text-decoration:none;" asp-action="Create" asp-route-id="@ViewBag.id">
            <div class="create-tran-btn">Send Money</div>

        </a>

	</div>
</div>
